
@{
    ViewData["Title"] = "Profile";
}

<div ng-controller="ProfileController" ng-init="init()">
    <div class="container margin-head">
        <div class="card card-width">
            <div class="card-header">
                <b>Profile</b>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-2 margin-right">
                        <img src="~/images/profile/profile.png" class="img-profile-width" />
                    </div>
                    <div class="col-sm-8">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td><b>Fullname</b></td>
                                    <td>{{profile.fullname}}</td>
                                </tr>
                                <tr>
                                    <td><b>Email</b></td>
                                    <td>{{profile.email}}</td>
                                </tr>
                                <tr>
                                    <td><b>Position</b></td>
                                    <td>{{profile.position}}</td>
                                </tr>
                                <tr>
                                <tr>
                                    <td><b>Age</b></td>
                                    <td>{{profile.age}}</td>
                                </tr>
                                <tr>
                                    <td><b>Experience</b></td>
                                    <td>{{profile.experience}}</td>
                                </tr>
                                <tr>
                                    <td><b>Computer skill</b></td>
                                    <td>{{profile.computer_lang}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/ProfileController.js"></script>
}







